<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/lunches_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Fake Lunch Event Title"
        android:textSize="31sp"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView android:id="@+id/organizer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/organizer_label"
            android:padding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/organizer_label"
            android:layout_alignTop="@id/organizer_label"
            android:padding="10dp"
            tools:text="Lunch organizer name"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/restaurants"
            android:prompt="@string/label_restaurant_first_choice"></Spinner>
    </LinearLayout>



</LinearLayout>